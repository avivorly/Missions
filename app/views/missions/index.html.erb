# encoding: utf-8
<h1>משימות</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Done</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr class=<%="#{mission.done? ? 'green' : 'blue'}"%>>
        <td><%= mission.title %></td>
        <td><%= mission.done %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_mission_path %>
