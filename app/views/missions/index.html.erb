<h1>משימות</h1>

<table>
  <thead>
    <tr>
      <th>כותרת</th>
      <th>מצב</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr class=<%="#{mission.done? ? 'green' : 'blue'}"%>>
        <td><%= mission.title %></td>
        <td><%= mission.done %></td>
        <td><%= link_to 'צפייה', mission %></td>
        <td><%= link_to 'עריכה', edit_mission_path(mission) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_mission_path %>
